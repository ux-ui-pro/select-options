{
  "name": "select-options",
  "version": "2.2.0",
  "description": "SelectOptions replaces standard HTML drop-down lists with custom ones, improving their appearance and user interaction.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/select-options.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/select-options/issues"
  },
  "homepage": "https://github.com/ux-ui-pro/select-options",
  "sideEffects": false,
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "clean": "rm -rf dist .parcel",
    "build": "yarn clean && parcel build",
    "lint:css": "stylelint **/*.scss",
    "lint:fix:css": "stylelint **/*.scss --fix",
    "lint:js": "eslint **/*.{ts,js}",
    "lint:fix:js": "eslint **/*.{ts,js} --fix",
    "format:js": "prettier --write **/*.{ts,js}",
    "lint:fix": "yarn lint:fix:js && yarn format:js && yarn lint:fix:css"
  },
  "css": "dist/index.css",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "targets": {
    "css": {
      "source": "src/index.scss"
    },
    "main": {
      "source": "src/index.ts"
    },
    "module": {
      "source": "src/index.ts"
    },
    "types": {
      "source": "src/index.ts"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-sass": "2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.11.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typescript": "5.4.5"
  },
  "keywords": [
    "custom select",
    "field",
    "dropdown",
    "select",
    "auto",
    "options",
    "required",
    "material",
    "design",
    "mobile",
    "desktop",
    "floating",
    "label",
    "notched",
    "outline",
    "form",
    "responsive",
    "ui",
    "ux",
    "javascript",
    "web",
    "development",
    "typescript"
  ]
}
